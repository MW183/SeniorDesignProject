generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  SUPPORT
}

enum Status {
  PENDING
  IN_PROGRESS
  BLOCKED
  COMPLETED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  password  String
  role      Role
  createdAt DateTime @default(now())
  // Audit fields removed (createdById, deletedAt)

  // Relations
  tasksAssigned Task[] @relation("TasksAssigned")
  tasksCompleted Task[] @relation("TasksCompleted")
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  // createdBy removed
  notes     String?

  weddingsAsSpouse1 Wedding[] @relation("Spouse1")
  weddingsAsSpouse2 Wedding[] @relation("Spouse2")
}

model Wedding {
  id          String   @id @default(uuid())
  date        DateTime
  // Allow multiple weddings to share same address; if address removed, null the location
  location    Address? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  locationId  String?
  tasksRemaining Int?
  // If a client is deleted, nullify spouse references so wedding records remain
  spouse1     Client?  @relation("Spouse1", fields: [spouse1Id], references: [id], onDelete: SetNull)
  spouse1Id   String?
  spouse2     Client?  @relation("Spouse2", fields: [spouse2Id], references: [id], onDelete: SetNull)
  spouse2Id   String?
  createdAt   DateTime @default(now())
  // createdBy and deletedAt removed

  tasks       Task[]
}

model Task {
  id          String   @id @default(uuid())
  name        String
  priority    Int
  dueDate     DateTime
  createdAt   DateTime @default(now())
  assignedTo  User?    @relation("TasksAssigned", fields: [assignedToId], references: [id])
  assignedToId String?
  currentStatus Status  @default(PENDING)
  completedOn DateTime?
  completedBy User?     @relation("TasksCompleted", fields: [completedById], references: [id])
  completedById String?
  notes       String?
  // Task should be deleted when its wedding is deleted
  wedding     Wedding  @relation(fields: [weddingId], references: [id], onDelete: Cascade)
  weddingId   String
}

model TaskTemplate {
  id                 String   @id @default(uuid())
  name               String
  defaultPriority    Int
  defaultDueOffsetDays Int
  notes              String?
  createdAt          DateTime @default(now())
}

model Vendor {
  id        String   @id @default(uuid())
  name      String
  // Allow vendors to keep record if address removed; set addressId to null
  address   Address? @relation(fields: [addressId], references: [id], onDelete: SetNull)
  addressId String?
  email     String?
  phone     String?
  rating    Int
  notes     String?
  // deletedAt removed

  tags      VendorTag[]
}

model Tag {
  id    String   @id @default(uuid())
  name  String   @unique
  vendors VendorTag[]
}

model VendorTag {
  vendor   Vendor @relation(fields: [vendorId], references: [id])
  vendorId String
  tag      Tag    @relation(fields: [tagId], references: [id])
  tagId    String

  @@id([vendorId, tagId])
}

model Address {
  id        String   @id @default(uuid())
  street    String
  city      String
  state     String
  zip       String
  
  weddings  Wedding[]
  vendors   Vendor[]
}
